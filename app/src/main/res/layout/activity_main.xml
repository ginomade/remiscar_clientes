<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nomade.forma.app.MainActivity"
    android:background="#d5d9ea">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d5d9ea">

            <TextView
                android:layout_width="1dp"
                android:layout_height="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indique origen del viaje:"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:typeface="sans"
                android:textIsSelectable="false"
                android:textSize="22dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textMultiLine"
                android:layout_below="@id/textView"
                android:ems="10"
                android:id="@+id/editTextMens"
                android:layout_gravity="center_horizontal"
                android:background="#dbedef" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar Movil"
                android:id="@+id/buttonEnviar"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/editTextMens"
                android:background="#4863a0"
                android:textColor="#d5d9ea"
                android:textSize="30dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold" />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonEnviar"
                android:layout_marginTop="12dp"
                android:id="@+id/wv_mensajes"/>


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ver Mis Viajes"
                android:id="@+id/buttonMisViajes"
                android:layout_gravity="center_horizontal"
                android:background="#4863a0"
                android:textColor="#d5d9ea"
                android:layout_above="@id/buttonDatos"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mis Datos"
                android:id="@+id/buttonDatos"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:background="#4863a0"
                android:textColor="#d5d9ea"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

</RelativeLayout>
